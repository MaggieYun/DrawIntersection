public class Settings implements ISettings {

	private String path;
	
	public Settings(String path){
		this.path = path;
		File file = new File(path);
		if(!file.exists()){
		//	file.createNewFile();
		}
	}
	
	public String[] get(String args){
		// TODO Auto-generated method stub
		String configuration=readconfig(this.path);
		String[] par=configuration.split(",");
		String[] arguments=null;
		if(args=="geocoord"){
			arguments=par[0].split(":");
		}
		if(args=="level"){
			arguments=par[1].split(":");
		}
		if(args=="mapurl"){
			arguments[0]=par[2];
			arguments[1]=par[3];
		}
		if(args=="dir"){
			arguments=par[4].split(":");	
		}
		if(args=="thread"){
			arguments=par[5].split(":");	
		}
		if(args=="mapkind"){
			arguments=par[6].split(":");	
		}
		return arguments;
	}

	
	@Override
	public void set(String args) {
		// TODO Auto-generated method stub

	}

	private String readconfig(String file){
		BufferedReader buffer = null;
		try {
			buffer = new BufferedReader(new FileReader(file));
		} catch (FileNotFoundException e1) {
			e1.printStackTrace();
		}
        StringBuilder lines = new StringBuilder();
        String line;
        try {
			while( (line = buffer.readLine()) != null){
			    lines.append(line);
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
        return lines.toString();
	}
	
