package net.yhte.gis.zxy.cores;

import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.net.URL;


/**
 * 
 * @author 张小颖
 *
 */
public class DownTile {
	/**
	 * 
	 * @throws IOException 
	 */
	public static void main() throws IOException{
	       }
	/**
	 * 
	 * @param args 
	 * @throws IOException 
	 */
	public static void down(String[] args) throws IOException{
		InsertLL insertll = TileSystem.GetLaLoLev(args);
		levelOfDetai mylevelOfDetai =TileSystem.GetLev(args);
		for (int i = mylevelOfDetai.lev1; i <=mylevelOfDetai.lev2; i++) {
			Parameter myParameter = TileSystem.GetParameter(insertll, i);
			LoadPic(myParameter.lev, myParameter.xmin,myParameter.xmax,myParameter.ymin,myParameter.ymax);
		}
		
    }
	/**
	 * 
	 * @param lev
	 * @param xmin
	 * @param xmax
	 * @param ymin
	 * @param ymax
	 * @throws IOException
	 */
	
	public static void LoadPic(int lev,int xmin,int xmax,int ymin,int ymax) throws IOException{
		//创建一级目录
		String dirName = "c:/test/allLayers" + "/" + "L" + lev;
		CreateFileUtil.createDir(dirName);
		//下载图片
			for (int k = xmin; k <= xmax; k++) {
				String fileName = dirName + "/X" + k;
			 CreateFileUtil.createDir(fileName);
				for (int j = ymin; j <= ymax; j++) {
					String fileName1 = dirName + "/X" + k+"/Y" + j + ".png";
					DlPicture(k, j, lev, fileName1);
				}
			}
		
	}
	/**
	 * 
	 * @param cx
	 * @param cy
	 * @param cz
	 * @param addr
	 * @throws IOException
	 */
	public static void DlPicture(int cx, int cy, int cz, String addr)
			throws IOException {
		// 定义远程文件地址
		String remote = "http://emap0.mapabc.com/mapabc/maptile?v=w2.61&x="
				+ cx + "&y=" + cy + "&z=" + cz + "&s=";
	
		// 定义下载后文件地址
		String local = addr;
		URL url = new URL(remote);

		// 从URL中读取流
		InputStream remoteStream = url.openStream();

		// 定义字节数组
		byte[] bytes = new byte[remoteStream.available()];

		// 从流中读取字节数组
		remoteStream.read(bytes);

		// 创建本地文件
		File file = new File(local);
		// 创建输出流
		FileOutputStream outStream = new FileOutputStream(file);
		// 写入字节数组
		outStream.write(bytes);
		// 关闭流
		outStream.close();
	}
	
}
